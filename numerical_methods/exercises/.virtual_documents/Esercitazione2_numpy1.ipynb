import matplotlib.pyplot as plt

f = lambda x : np.sin(x**2)/(x**2 + 1)
x = np.linspace(-5, 5, 1100)
y = f(x)

plt.plot(x, y, "r-")
plt.title("funzione")
plt.xlabel("x")
plt.ylabel("y")
plt.show()





