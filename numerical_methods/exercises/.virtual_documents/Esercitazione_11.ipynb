def creaPoisson(n):
    d = np.ones((n))*4
    e = -np.ones((n - 1,))
    f = -np.ones((n - 3,))
    A = np.diag(d) + np.diag(e, -1) + np.diag(e, 1) + np.diag(f, 3) + np.diag(f, -3)
    return A


