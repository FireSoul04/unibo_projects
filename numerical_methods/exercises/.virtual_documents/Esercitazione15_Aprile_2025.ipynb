def creaPoisson(n):
    d = np.full((n,), 4)
    e = np.full((n - 1,), -1)
    f = np.full((n - 3,), -1)

    A = np.diag(d) + np.diag(e, -1) + np.diag(e, 1) + np.diag(f, -3) + np.diag(f, 3)
    
    return A


n5 = 10
A5 = creaPoisson(n5)
print(A5)


b5 = np.sum(A5, axis=1).reshape(n5, 1)
x0_5 = np.zeros_like(b5)
tol = 1e-10
