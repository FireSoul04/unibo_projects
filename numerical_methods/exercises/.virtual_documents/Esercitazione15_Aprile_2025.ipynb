xG5, itG5, er_vetG5 = GaussSeidel(A5, b5, x0_5, tol, it_max)
omega = 1.4
xG_sor5, itG_sor5, er_vetG_sor5 = GaussSeidelSor(A5, b5, x0_5, tol, it_max, omega)
